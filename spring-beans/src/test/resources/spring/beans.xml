<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	   xsi:schemaLocation="http://www.springframework.org/schema/beans
                        http://www.springframework.org/schema/beans/spring-beans.xsd">


	<!-- 该类有一个初始化方法 -->
	<bean id="userService"
		  class="org.springframework.beans.UserService" init-method="my_init">
		<!-- 引用类型 -->
		<property name="userDao" ref="userDao" />
	</bean>

	<bean id="userDao" class="org.springframework.beans.UserDao" scope="prototype">
		<property name="dataSource" ref="dataSource"/>
	</bean>

	<!-- 该类有一个初始化方法 -->
	<bean id="dataSource" class="org.springframework.beans.DataSource" scope="singleton">
		<property name="url" value="jdbc:mysql://111.231.106.221:3306/kkb"/>
		<property name="username" value="kkb"/>
		<property name="password" value="kkb111111"/>
	</bean>

</beans>